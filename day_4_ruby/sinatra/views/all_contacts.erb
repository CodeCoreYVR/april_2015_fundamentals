<h1>All Contacts(<%= @contacts.size %>)</h1>
<table class="bordered-table">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th></th>
  </tr>
  <%# looping through the contacts to display a table row for each %>
  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.first_name %></td>
      <td><%= contact.last_name %></td>
      <td><%= contact.email %></td>
      <td>
        <button type="button"><a href="/contact/<%= contact.id %>">View</a></button>
        <form action="/contact/<%= contact.id %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Delete">
        </form>
      </td>
    </tr>
  <% end %>
</table>
